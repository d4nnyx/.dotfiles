{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read(~/.claude/**)",
      "Write(~/.claude/**)",
      "Read(/tmp/**)",
      "Write(/tmp/**)",
      "Read(~/.claude.json)",
      "Write(~/.claude.json)",
      "Read(~/DEV/**)",
      "Write(~/DEV/**)",
      "Read(~/.config/nvim/**)",
      "Glob(~/**)",
      "Grep(~/**)",
      "Search(~/**)",
      "Glob(/tmp/**)",
      "Grep(/tmp/**)",
      "Search(/tmp/**)",
      "Bash(echo *)",
      "Bash(tar *)",
      "Bash(cd *)",
      "Bash(cat *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(tail *)",
      "Bash(sed *)",
      "Bash(sleep *)",
      "Bash(tail *)",
      "Bash(head *)",
      "Bash(tflint *)",
      "Bash(terragrunt init *)",
      "Bash(terragrunt plan *)",
      "Bash(terraform plan *)",
      "Bash(go *)",
      "Bash(yamllint *)",
      "Bash(ansible-lint *)",
      "Bash(ansible *)",
      "Bash(helm *)",
      "Bash(git *)",
      "Bash(glab *)",
      "mcp__kubernetes",
      "mcp__context7",
      "mcp__terraform",
      "mcp__freelo-docker",
      "mcp__chrome",
      "WebSearch",
      "WebFetch",
      "Bash(bun *)",
      "Bash(test *)"
    ],
    "deny": [
      "Bash(find *)",
      "Bash(ls *)",
      "Bash(grep *)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "Using the Force",
      "Consulting the Jedi archives",
      "Making the Kessel Run",
      "Searching for droids",
      "Feeling a disturbance in the Force",
      "Powering up the lightsaber",
      "Navigating through hyperspace",
      "Decoding the Death Star plans",
      "Training on Dagobah",
      "Repairing the hyperdrive",
      "Communicating via hologram",
      "Dodging TIE fighters",
      "Checking the thermal exhaust port",
      "Meditating like Yoda",
      "Assembling the rebel fleet",
      "Slicing into Imperial systems",
      "Calibrating the targeting computer",
      "Scanning for life forms",
      "Channeling the dark side",
      "Negotiating with Jawas"
    ]
  }
}
